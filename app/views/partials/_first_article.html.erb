<div class="row">
  <%= link_to(article, class: "no-link") do %>
      <div class="col-sm-12 col-md-8 article-item">
        <div class="big-image-container" style="background-image: url('<%= article.preview_img %>'); background-position: center; width: 100%;background-size: cover;">
          <%= render partial: 'partials/category_rubric_tags', locals: { article: article } %>
        </div>
      </div>
      <div class="col-sm-12 col-md-4 article-item">
        <div class="text-container big-text">
          <div class="text-vertical">
            <div class="views-comments-thumb">
              <div>
                <span class="glyphicon glyphicon-eye-open"></span>
                <span><%= article.views %></span>
              </div>
              <div>
                <span class="glyphicon glyphicon-comment"></span>
                <span class="disqus-comment-count" data-disqus-url='<%= article_url(article) %>'>0</span>
              </div>
            </div>
            <div class="article-desc">
              <h3><%= article.title %></h3>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>